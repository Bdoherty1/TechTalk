{{!-- views/dashboard.handlebars --}}
<div class="dashboard">
  <h2>Welcome to your Dashboard</h2>
  {{#each posts}}
    <div class="post">
      <h3>{{title}}</h3>
      <p>Posted on {{createdAt}}</p>
      <a href="/post/edit/{{id}}">Edit</a>
      <a href="/post/delete/{{id}}">Delete</a>
    </div>
  {{/each}}
  <a href="../public/js/add-post.js">Create New Post</a>
</div>
